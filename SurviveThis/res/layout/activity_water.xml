   
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".Water"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/water_hydrationHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hydration"
	        android:layout_marginTop="50dp"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    <TextView
	        android:id="@+id/water_hydrationDetail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/water_hydrationHeader"
	        android:layout_marginTop="0dp"
	        android:text="@string/water_hydration" />
	    
	    <TextView
	        android:id="@+id/water_animalsHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/animals"
	        android:layout_marginTop="50dp"
	        android:visibility="invisible"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    <TextView
	        android:id="@+id/water_animalsDetail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/water_animalsHeader"
	        android:layout_marginTop="0dp"
	        android:visibility="invisible"
	        android:text="@string/water_animals" />
	        
	    <Button
	        android:id="@+id/btnWaterNext"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/water_hydrationHeader"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="80dp"
	        android:layout_alignParentTop="true"
	        android:text="&#8658;"
	        android:onClick="onClick"/>
	</RelativeLayout>
</ScrollView>

